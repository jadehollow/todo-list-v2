<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% newListItems.forEach(function(item) { %>
  <form action="/delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        name="checkbox"
        value="<%= item._id %>"
        onChange="this.form.submit()"
      />
      <p><%= item.name %></p>
    </div>
    <input 
        type="hidden" 
        name="checkedListName" 
        value="<%= listTitle %>" 
    />
  </form>
  <% }); %>

  <form class="item" action="/" method="post">
    <input
      class="new-item"
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <button 
    type="submit" 
    name="list" 
    value="<%=listTitle %>"
    >
        +
    </button>
  </form>
</div>

<div class="bottom-box" id="new-list">
  <form class="item" action="/list" method="post">
    <input
      class="list-input"
      type="text"
      name="newList"
      placeholder="Enter Name of New or Existing List..."
      autocomplete="off"
    />
    <button type="submit" name="newListButton">Go</button>
  </form>
</div>

<ul class="nav justify-content-center">
    <li class="nav-item">
        <a class="nav-link active" aria-current="page" href="/">Main List</a>
    </li>
</ul>

<%- include("footer") -%>
